{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ OpenGl 빌드",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-I${workspaceFolder}/include",
				"${workspaceFolder}/src/glad.c",
				"${workspaceFolder}/src/util.cpp",
				"${workspaceFolder}/main.cpp",
				"-o",
				"${workspaceFolder}/main",
				"-lGLEW",
				"-lglfw3",
				"-lGL",
				"-lX11",
				"-lXi",
				"-lXrandr",
				"-lXxf86vm",
				"-lXinerama",
				"-lXcursor",
				"-lrt",
				"-lm",
				"-pthread",
				"-ldl"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "컴파일러: /usr/bin/g++"
		}
	]
}